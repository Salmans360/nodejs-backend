extends baseEmail

block content
    head
      meta(content='text/html; charset=utf-8' http-equiv='Content-Type')
      title Email Template
      meta(name='description' content='Email Template')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap')
      style(type='text/css').
        a:hover {
        text-decoration: underline !important;
        }
        .buttonGet{
          color:#6921c4;
          text-decoration: none !important;
          font-weight:bold;
          text-transform:capitalize;
          padding-left:0.5rem;
        }
    // 100% body table
    table(cellspacing='0' border='0' cellpadding='0' width='100%' style="\
    @import url(https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap);\
    font-family: 'Roboto';\
    ")
      tr
        td
          h1(style="\
          color: #121a26;\
          font-weight: 600;\
          margin: 0;\
          font-size: 25px;\
          text-align: left;\
          ")
            | #{businessName}
          br
          table(style='background-color: #f8f8fc; max-width: 670px; padding:0 1rem; margin: 0 auto' width='100%' border='0' align='center' cellpadding='0' cellspacing='0')
            tr
              td(style='height: 20px') &nbsp;
            tr
            tr
              td
                  tr
                   td(style="\
                    padding: 0 35px;\
                    text-align: left;\
                    color: #384860;\
                    ")
                      p(style="\
                      font-size: 14px;\
                      color: #384860;\
                      letter-spacing: 0.2px;\
                      margin: 8px 0 0;\
                      line-height: 24px;\
                      text-align: left;\
                      ")
                        br
                        |                        Hi #{customerName},
                        br
                        br
                        |                        Please view invoice for your order at #{businessName}.
                        br
                      p(style="\
                      text-align:center;\
                      width:100%;\
                       padding-top:2.5rem;\
                      ")
                        a(href=`${url}`, target='_blank' style="\
                        color: #fff;\
                        text-decoration: none !important;\
                        background: #6921c4;\
                        padding:1rem 2.5rem;\
                        font-weight: 600;\
                        font-size: 14px;\
                        width: max-content;\
                        text-align: center;\
                        border-radius:15px;\
                        margin:0 auto;\
                        ") Invoice
                        br
                      p(style="\
                      font-size: 13px;\
                      color: #6d7d8b;\
                      letter-spacing: 0.2px;\
                      line-height: 24px;\
                      text-align: left;\
                      ")
                      br
                      | #{message}
                      | <br />
                      br
                      p(style="\
                      font-size: 13px;\
                      color: #6d7d8b;\
                      letter-spacing: 0.2px;\
                      line-height: 24px;\
                      text-align: left;\
                      ")
                      br
                      | Regards,
                      | <br />
                      | #{businessName}
                      br
            tr
              td(style='height: 20px') &nbsp;
            tr
              td
                table(width='95%' border='0' align='center' cellpadding='0' cellspacing='0' style='\
                max-width: 670px;\
                border-radius: 8px;\
                text-align: center;\
                ')
                  tr(style='\
                  background: #d4cbff;\
                  display: flex;\
                  justify-content: space-between;\
                  align-items: center;\
                  height: 100px;\
                  border-radius: 8px;\
                  ')
                    td(style='width: 100%')
                      h1(style="\
                      color: #121a26;\
                      font-weight: 600;\
                      margin: 0;\
                      font-size: 16px;\
                      text-align: center;\
                      ")
                        | Happy to help!
                      p(style="\
                      text-align: center;\
                      margin: 0;\
                      padding-top: 0.7rem;\
                      ")
                        a(href='mailto:support@torque360.co' target='_blank' style="\
                        color: #6921c4;\
                        text-decoration: underline !important;\
                        font-weight: 600;\
                        font-size: 14px;\
                        width: max-content;\
                        text-align: center;\
                        ") support@torque360.co
                  tr
                    td(style='height: 20px') &nbsp;